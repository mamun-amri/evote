<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/ic_list_siswa"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <TableRow
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/nisn"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:id="@+id/tv_nisn"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1101161096"/>
        </TableRow>
        <TableRow
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Nama"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:id="@+id/tv_nama"
                android:padding="1dp"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:text="Januari"/>
        </TableRow>
        <TableRow
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Kelas"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:id="@+id/tv_kelas"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="350000"/>
        </TableRow>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/btn_blue"
            android:padding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/white"
            android:showDividers="beginning|middle|end"
            android:layout_marginStart="30dp">

            <Switch
                android:id="@+id/btn_edit"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:gravity="center"
                tools:ignore="UseSwitchCompatOrMaterialXml" />



            <TextView
                android:id="@+id/btn_hapus"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_angel_menu_item"
                android:gravity="center"
                android:text="hapus"
                android:textAllCaps="false"
                android:textColor="@color/red_muda" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
